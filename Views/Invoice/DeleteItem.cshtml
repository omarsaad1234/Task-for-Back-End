@model Task_for_Back_End.Models.InvoiceDetail

@{
    ViewData["Title"] = "DeleteItem";
}

<h1>Delete An Item</h1>

<h3>Are you sure you want to delete this Item?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Item Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            Item Count
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemCount)
        </dd>
        <dt class = "col-sm-2">
            Item Price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemPrice)
        </dd>
    </dl>
    
    <form asp-action="DeleteItem">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="InvoiceHeaderID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Edit" asp-route-id="@Model.InvoiceHeaderID">Back to Edit</a>
    </form>
</div>
